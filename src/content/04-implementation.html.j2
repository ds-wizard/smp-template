    {%- for fileFormat in data.smp.implementation.files.fileFormats -%}
    <li><strong>{{ fileFormat.name }}</strong>: {% if fileFormat.usesAs %}{{ fileFormat.usesAs|join(", ")|lower }}{% endif %}</li>
    {%- endfor -%}
</ul>
{%- else -%}
<p>No specific file formats have been identified yet for this software project.</p>
{%- endif -%}

<h3>4.5. Protocols</h3>

{%- if data.smp.implementation.protocols.uses -%}
